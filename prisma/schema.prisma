generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(nanoid())
  clerkId   String   @unique
  name      String?
  email     String   @unique
  role      Roles    @default(USER)
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model Product {
  id           String @id @default(nanoid())
  productName  String
  price        String
  productImage String
  madeBy       User[]
}

enum Roles {
  ADMIN
  USER
}
